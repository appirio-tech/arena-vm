	  <scanInterval>20000</scanInterval>
	  <keepAliveTimeout>15000</keepAliveTimeout>
      <listenerType>
        <id>1</id>
      </listenerType>
    </connectionListenerConfiguration>
    <runnerMinThreads>5</runnerMinThreads>
    <runnerMaxThreads>10</runnerMaxThreads>
	<timeoutForAck>5000</timeoutForAck>
  </processorConnectionConfiguration>
  <databaseConfigurationFile>/conf/hibernate.cfg.xml</databaseConfigurationFile>
  <nodeConfiguration>
    <maintenanceRemovalInterval>60000</maintenanceRemovalInterval>
	<maintenanceReassignInterval>10000</maintenanceReassignInterval>
    <timeBeforeShutdown>5000</timeBeforeShutdown>
	<maxBulkSize>100</maxBulkSize>
	<sharedObjectStorageTime>1800000</sharedObjectStorageTime>
  </nodeConfiguration>
