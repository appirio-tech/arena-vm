<com.topcoder.farm.controller.configuration.ControllerConfiguration>
  <rootFolder>/tmp/controller/deploy/</rootFolder>
  <clientConnectionConfiguration>
    <connectionListenerConfiguration class="com.topcoder.farm.controller.remoting.net.NBIOListenerConfiguration">
      <port>25000</port>
      <numAcceptThreads>3</numAcceptThreads>
      <numReadThreads>5</numReadThreads>
      <numWriteThreads>5</numWriteThreads>
      <monitorClassName>com.topcoder.server.listener.monitor.EmptyMonitor</monitorClassName>
      <csHandlerFactoryClassName>com.topcoder.farm.shared.serialization.FarmCSHandlerFactory</csHandlerFactoryClassName>
      <ipsStringList></ipsStringList>
      <isAllowedSet>false</isAllowedSet>
      <scanInterval>20000</scanInterval>
	  <keepAliveTimeout>15000</keepAliveTimeout>
      <listenerType>
        <id>1</id>
      </listenerType>
    </connectionListenerConfiguration>
    <runnerMinThreads>5</runnerMinThreads>
    <runnerMaxThreads>10</runnerMaxThreads>
	<timeoutForAck>5000</timeoutForAck>
  </clientConnectionConfiguration>
  <processorConnectionConfiguration>
    <connectionListenerConfiguration class="com.topcoder.farm.controller.remoting.net.NBIOListenerConfiguration">
      <port>25001</port>
      <numAcceptThreads>3</numAcceptThreads>
      <numReadThreads>5</numReadThreads>
      <numWriteThreads>5</numWriteThreads>
      <monitorClassName>com.topcoder.server.listener.monitor.EmptyMonitor</monitorClassName>
