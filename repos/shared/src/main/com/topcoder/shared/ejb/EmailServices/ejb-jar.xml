            </method>
            <method>
                <ejb-name>EmailJobGroup</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>EmailTemplateGroup</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>EmailServer</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
