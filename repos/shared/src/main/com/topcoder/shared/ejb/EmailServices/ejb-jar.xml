            <method>
                <ejb-name>EmailJob</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>EmailList</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>EmailTemplate</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>EmailListGroup</ejb-name>
